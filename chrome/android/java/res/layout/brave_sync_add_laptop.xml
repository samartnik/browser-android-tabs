<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_add_laptop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/google_grey_50" >

    <LinearLayout android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" >

        <LinearLayout android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:paddingBottom="15dip"
            android:paddingTop="15dip"
            android:paddingStart="15dip"
            android:paddingEnd="15dip" >

            <Button android:id="@+id/brave_sync_qr_code_off_btn"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:text="@string/brave_sync_qr_code"
                style="@style/BraveSyncToggleOffButton"
                android:bottomRightRadius="0dp"
                android:bottomLeftRadius="5dp"
                android:topRightRadius="0dp"
                android:topLeftRadius="5dp" />

            <Button android:id="@+id/brave_sync_code_words_on_btn"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:text="@string/brave_sync_code_words"
                style="@style/BraveSyncToggleOnButton" />

        </LinearLayout>

        <TextView android:id="@+id/brave_sync_add_device_code_words"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:gravity="start|top"
            android:textSize="18sp"
            android:background="@android:color/white"
            android:paddingStart="15dip"
            android:paddingEnd="15dip" />

        <LinearLayout android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:paddingStart="15dip"
            android:paddingEnd="15dip"
            android:paddingBottom="15dip" >

            <TextView android:id="@+id/brave_sync_fake_2"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="start|center" />

            <ImageButton android:id="@+id/brave_sync_copy_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/copy_paste"
                android:background="@android:color/white"
                android:contentDescription="@string/brave_sync_word_count_text"
                android:gravity="end|center" />

        </LinearLayout>

        <include layout="@layout/menu_separator"/>

        <TextView android:id="@+id/brave_sync_text_add_laptop"
             android:layout_width="match_parent"
             android:layout_height="0px"
             android:layout_weight="1"
             android:gravity="center"
             android:paddingStart="15dip"
             android:paddingEnd="15dip" />

         <Button android:id="@+id/brave_sync_btn_add_laptop_done"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="@string/brave_sync_btn_done"
             style="@style/BraveSyncButton"/>

    </LinearLayout>
</ScrollView>
