<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <!-- Items from brave_sync_preferences.xml -->
    <ListView android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="false"
        android:visibility="gone"/>    

    <ImageView android:id="@+id/brave_sync_image"
       android:layout_width="match_parent"
       android:layout_height="0px"
       android:layout_weight="2"
       android:src="@drawable/brave_sync"
       android:scaleType="center"
       android:contentDescription="@null" />

   <org.chromium.chrome.browser.qrreader.CameraSourcePreview
       android:id="@+id/preview"
       android:layout_width="match_parent"
       android:layout_height="0px"
       android:layout_weight="2.6"
       android:scaleType="center"
       android:visibility="gone" />

   <TextView android:id="@+id/brave_sync_text"
       android:layout_width="match_parent"
       android:layout_height="0px"
       android:layout_weight="1.4"
       android:gravity="center" />

   <Button android:id="@+id/brave_sync_btn_scan_chain_code"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="@string/brave_sync_scan_chain_code"
       style="@style/FlushFooterButton"/>

   <Button android:id="@+id/brave_sync_btn_start_new_chain"
       android:fragment="org.chromium.chrome.browser.preferences.BraveSyncScreensPreference"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="@string/brave_sync_start_new_chain"
       style="@style/FlushFooterButton"/>

   <Button android:id="@+id/brave_sync_btn_enter_code_words"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="@string/enter_code_words_sync"
       style="@style/FlushFooterButton"
       android:visibility="gone"/>

   <Button android:id="@+id/brave_sync_btn_done"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="@string/brave_sync_btn_done"
       style="@style/FlushFooterButton"
       android:visibility="gone"/>

   <Button android:id="@+id/brave_sync_btn_display_code_words"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="@string/brave_sync_btn_display_code_words"
       style="@style/FlushFooterButton"
       android:visibility="gone"/>

    <ImageButton android:id="@+id/brave_sync_btn_mobile"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:src="@drawable/brave_sync_btn_mobile"
        android:contentDescription="@string/brave_sync_btn_mobile"
        android:visibility="gone"/>

    <ImageButton android:id="@+id/brave_sync_btn_laptop"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:src="@drawable/brave_sync_btn_laptop"
        android:contentDescription="@string/brave_sync_btn_laptop"
        android:visibility="gone"/>

   <TableLayout
      android:id="@+id/tableEnterWords"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:padding="5dip"
      android:visibility="gone" >

      <TableRow
          android:layout_width="fill_parent"
          android:layout_height="wrap_content" >

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center"
              android:text="@string/enter_code_words_below_sync" />
      </TableRow>

      <TableRow
          android:layout_width="fill_parent"
          android:layout_height="wrap_content" >

          <EditText android:id="@+id/editTextWord1"
              android:layout_width="0px"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:inputType="text"
              android:nextFocusUp="@+id/editTextWord16"
              android:nextFocusLeft="@+id/editTextWord16"
              android:nextFocusRight="@+id/editTextWord2"
              android:nextFocusDown="@+id/editTextWord2" />

          <EditText android:id="@+id/editTextWord2"
              android:layout_width="0px"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:inputType="text"
              android:nextFocusUp="@+id/editTextWord1"
              android:nextFocusLeft="@+id/editTextWord1"
              android:nextFocusRight="@+id/editTextWord3"
              android:nextFocusDown="@+id/editTextWord3" />

          <EditText android:id="@+id/editTextWord3"
              android:layout_width="0px"
              android:layout_height="wrap_content"
